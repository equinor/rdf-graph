{
	"$schema": "node_modules/lerna/schemas/lerna-schema.json",
	"useWorkspaces": true,
	"npmClient": "pnpm",
	"useNx": true,
	"version": "independent",
	"command": {
		"version": {
			"allowBranch": ["main", "alpha", "beta", "refactor/move-to-nx-pnpm"],
			"conventionalCommits": true,
			"ignoreChanges": ["*.spec.ts", "*.test.ts", "*.md"]
		},
		"publish": {
			"conventionalCommits": true,
			"ignoreChanges": ["*.spec.ts", "*.test.ts", "*.md"],
			"message": "chore(release): publish"
		}
	}
}

{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"type": "pwa-msedge",
			"request": "attach",
			"name": "Launch Edge against localhost",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}"
		},
		{
			"type": "pwa-msedge",
			"name": "Launch Microsoft Edge",
			"request": "launch",
			"runtimeArgs": ["--remote-debugging-port=9222"],
			"url": "http://localhost:3000", // Provide your project's url to finish configuring
			"presentation": {
				"hidden": true
			}
		},
		{
			"type": "pwa-msedge",
			"name": "Launch Microsoft Edge in headless mode",
			"request": "launch",
			"runtimeArgs": ["--headless", "--remote-debugging-port=9222"],
			"url": "http://localhost:3000", // Provide your project's url to finish configuring
			"presentation": {
				"hidden": true
			}
		},
		{
			"type": "vscode-edge-devtools.debug",
			"name": "Open Edge DevTools",
			"request": "attach",
			"url": "http://localhost:3000", // Provide your project's url to finish configuring
			"presentation": {
				"hidden": true
			}
		}
	],
	"compounds": [
		{
			"name": "Launch Edge Headless and attach DevTools",
			"configurations": ["Launch Microsoft Edge in headless mode", "Open Edge DevTools"]
		},
		{
			"name": "Launch Edge and attach DevTools",
			"configurations": ["Launch Microsoft Edge", "Open Edge DevTools"]
		}
	]
}
